    "about": {
      "enabled": true,
      "content": "This pre-commit hook helps maintain consistent README files by validating that\nyour README.md matches the output generated from your Handlebars template and\nJSON configuration. It ensures documentation stays up-to-date automatically."
    },
    "built_with": {
      "enabled": true,
      "frameworks": [
        {
          "name": "Node.js",
